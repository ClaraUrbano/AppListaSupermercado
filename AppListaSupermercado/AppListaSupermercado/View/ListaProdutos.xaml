<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.ListaProdutos"
             BackgroundColor="Wheat">
    
    <ContentPage.Content>

        <StackLayout>
            <Frame BackgroundColor="Peru" Padding="36" CornerRadius="0">
                <Label Text="Lista Supermercado" HorizontalTextAlignment="Center" TextColor="Wheat"  FontSize="36"/>
            </Frame>
            
            <StackLayout VerticalOptions="EndAndExpand">
                <Label Text="Adicione produtos a sua lista aqui:" HorizontalTextAlignment="Center"/>
                <Button Text="Adicionar Produtos" TextColor="Wheat" Clicked="Button_Clicked_Adicionar" BackgroundColor="Peru"/>
            </StackLayout>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>